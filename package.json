{
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && nodemon ./src/index.js",
    "services:up": "docker compose -f src/compose.yaml up -d",
    "services:down": "docker compose -f src/compose.yaml down",
    "services:stop": "docker compose -f src/compose.yaml stop",
    "test": "npm run services:up && jest",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "seed": "node ./src/infra/seed.js"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "jest": "^29.6.2",
    "node": "^25.6.0",
    "nodemon": "^3.1.11",
    "pg": "^8.18.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  }
}
